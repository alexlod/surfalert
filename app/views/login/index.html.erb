<h1>Log in</h1>  
  
<%= form_tag "/login" do %>  
  <% unless flash[:notice].blank? %>
    <h3><%= flash[:notice] %></h3>
  <% end %>
  <div class="field">  
    <%= label_tag :email %>  
    <%= text_field_tag :email, params[:email] %>  
  </div>  
  <div class="field">  
    <%= label_tag :password %>  
    <%= password_field_tag :password %>  
  </div>  
  <div class="actions"><%= submit_tag "Log in" %></div>  
<% end %>  
